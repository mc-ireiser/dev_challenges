{
  "name": "workana/hiring_challenge",
  "description": "Workana Dev Challenge",
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "ext-redis": "*",
    "php-di/php-di": "^6.3",
    "rakit/validation": "^1.4",
    "slim/psr7": "^1.2",
    "slim/slim": "^4.5"
  },
  "require-dev": {
    "phpunit/phpunit": "8.5.9"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "App/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
